# SafeAgent Environment Variables

# NextAuth.js
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Upstash Redis (for rate limiting)
# Get from https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Database (optional - for production)
DATABASE_URL="postgresql://user:password@localhost:5432/safeagent"

# API Configuration
API_RATE_LIMIT_FREE=1000     # requests per month for free tier
API_RATE_LIMIT_PRO=100000    # requests per month for pro tier

# Detection Settings
JAILBREAK_THRESHOLD=0.5
PII_DETECTION_ENABLED=true
